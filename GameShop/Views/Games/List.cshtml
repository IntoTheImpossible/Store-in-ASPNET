</head>
<style>
    .btn
    {
        margin-top: 8px;
        margin-bottom: 20px;
    }
</style>
<body>
    <main>

  <div class="album py-5 bg-dark">
    <div class="container">
       <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

    @{
        foreach (Game game in Model.IEAllGames)
        {
            @Html.Partial("AllGames", game); 
        }
    }
    </div>
        @if(Model.HasPreviousPage)   
        {
            <a asp-controller="Games" asp-action="List" asp-route-page="@(Model.PageNumber - 1)"
       class="btn btn-outline-light">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Powrót
    </a>
        }

        @if (Model.HasNextPage)  
                {
                 <a asp-controller="Games" asp-action="List" asp-route-page="@(Model.PageNumber + 1)"
       class="btn btn-outline-light">
        <i class="glyphicon glyphicon-chevron-right"></i>
        Przejdź
    </a>  
            }
            </div>
    </div>
    </main>
</body>